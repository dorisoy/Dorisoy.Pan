<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:Dorisoy.Pan.Controls"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:Dorisoy.Pan.ViewModels"
             xmlns:m="using:Dorisoy.Pan.Models"
             xmlns:conv="using:Dorisoy.Pan.Converters"
             xmlns:input="using:FluentAvalonia.UI.Input"
             xmlns:pg="clr-namespace:Dorisoy.Pan.Pages;assembly=Dorisoy.Pan"
             mc:Ignorable="d"
             d:DesignWidth="800"
             x:Class="Dorisoy.Pan.Pages.DocumentPage"
             x:DataType="vm:DocumentPageViewModel"
             x:CompileBindings="False">

    <UserControl.Resources>
        <input:StandardUICommand x:Key="DeleteCommand"
                                 Kind="Delete"
                                 Label="{LxaString Delete}"
                                 Command="{Binding DeleteCommand}" />
        <conv:FormatKbSizeConverter
            x:Key="FormatKbSizeConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*"
          ClipToBounds="False">

        <local:PageHeaderControl Title="{LxaString DocumentManagement}"
                                 Grid.Row="0"/>

        <!--数据列表-->
        <Grid Margin="15,0,15,15"
              RowDefinitions="45,50,*,45"
              Grid.Row="1">

            <!--当前目录-->
            <Grid  Grid.Row="0"
                   ColumnDefinitions="80,*"
                   RowDefinitions="*">
                <TextBlock Text="{LxaString CurrentDir}"
                            FontSize="14"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Grid.Row="0"
                           Grid.Column="0"/>
                <ItemsRepeater x:Name="FolderPaths"
                               ItemsSource="{Binding FolderPaths}"
                               Margin="0,0,0,0"
                               Grid.Row="0"
                               Grid.Column="1">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="4"
                                     Orientation="Horizontal" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           FontWeight="Normal"/>
                                <!--<TextBlock Text="/"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontWeight="Normal"
                                           Margin="8,0,8,0"/>-->
                                  <ui:SymbolIcon Symbol="ChevronRight"
                                               FontSize="14"
                                               Foreground="#f7901a"
                                               Margin="8,0,8,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </Grid>

            <!--//FolderPaths-->
            <Border  Grid.Row="1"
                     BorderBrush="#eee"
                     BorderThickness="1,1,1,1" 
                     CornerRadius="8">
                <ui:CommandBar DefaultLabelPosition="Right">
                    <ui:CommandBar.PrimaryCommands>
                        <ui:CommandBarButton Label="{LxaString UploadFiles}"
                                             FontSize="16"
                                             IconSource="FolderFilled"
                                             Command="{Binding UploadDocument}" />
                        <ui:CommandBarSeparator />
                        <ui:CommandBarButton Label="{LxaString UploadFolder}"
                                             FontSize="16"
                                             IconSource="OpenFolderFilled"
                                             Command="{Binding UploadDocuments}" />
                        <ui:CommandBarSeparator />
                        <ui:CommandBarButton IconSource="IconAddBold"
                                             Label="{LxaString NewFolder}"
                                             FontSize="16"
                                             Command="{Binding CreateFolders}" />
                        <ui:CommandBarSeparator />
                        <ui:CommandBarButton IconSource="MailReplyFilled"
                                             Label="{LxaString PreviousFolder}"
                                             FontSize="16"
                                             Command="{Binding PreviousFolder}"/>
                        <ui:CommandBarSeparator />

                    </ui:CommandBar.PrimaryCommands>

                </ui:CommandBar>
            </Border>


            <!--加载进度-->
            <Border Grid.Row="2"
                    Margin="0,0,0,0"
                    Background="Transparent"
                    CornerRadius="0"
                    IsVisible="{Binding IsLoading}">
                <Panel>
                    <ProgressBar Width="300"
                                 Height="5"
                                 Maximum="100"
                                 Foreground="#f7901a"
                                 IsIndeterminate="True"/>
                </Panel>
            </Border>
            

            <!--文档列表-->
            <DataGrid
                Grid.Row="2"
                IsVisible="{Binding !IsLoading}"
                Margin="0,10,0,0"
                GridLinesVisibility="Horizontal"
                x:Name="myDataGrid"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                SelectionMode="Single"
                RowBackground="Transparent"
                IsReadOnly="True">
                <DataGrid.Columns>

                    <!--选择框-->
                    <DataGridTemplateColumn
                        Width="50">
                        <DataGridTemplateColumn.CellTemplate >
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Selected}"
                                          HorizontalAlignment="Center"
                                          HorizontalContentAlignment="Center"
                                          Margin="0,0,0,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--图标-->
                    <DataGridTemplateColumn Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ui:SymbolIcon Symbol="{Binding ThumbnailIcon}"
                                               FontSize="20"
                                               Foreground="#f7901a"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="名称"
                                        Width="*"
                                        Binding="{Binding Name}" />

                    <DataGridTextColumn Header="创建时间"
                                        Width="200"
                                        Binding="{Binding CreatedDate}"/>

                    <DataGridTemplateColumn Header="{LxaString Size}"
                                            Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"
                                           Text="{Binding Size, Converter={StaticResource FormatKbSizeConverter}}"></TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Header="操作" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel
                                    Margin="5">
                                    <Button Classes="Info"
                                            Margin="0,0,5,0"
                                            IsEnabled="{Binding IsView}"
                                            Command="{Binding $parent[DataGrid].DataContext.ReviewDoc}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}">
                                        
                                        
                                        <Grid>
                                            <ui:SymbolIcon Symbol="View"
                                                           FontSize="18"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"/>

                                            <TextBlock Margin="20,0,0,0"
                                                       Text="预览"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right" />
                                        </Grid>
                                    </Button>
                                    <Button Classes="Delete"
                                            Margin="5,0,0,0"
                                            Command="{Binding $parent[DataGrid].DataContext.DeleteDoc}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}">
                                        <Grid>
                                            <ui:SymbolIcon Symbol="DeleteFilled"
                                                           FontSize="18"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"/>
                                            <TextBlock Margin="20,0,0,0"
                                                       Text="{LxaString Delete}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right" />
                                        </Grid>
                                    </Button>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                </DataGrid.Columns>
            </DataGrid>

            <!--分页-->
            <StackPanel Grid.Row="3"
                        Margin="0,10"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button
                    Command="{Binding FirstPageCommand}">
                    <ui:SymbolIcon Symbol="ChevronLeft"
                                   FontSize="14" />
                </Button>
                <RepeatButton Margin="12,0,0,0"
                              Command="{Binding PreviousPageCommand}">
                    <ui:SymbolIcon Symbol="PreviousFilled"
                                   FontSize="14" />
                </RepeatButton>
                <!--当前-->
                <TextBlock Margin="8,0"
                           VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="第 {0} 页，共 {1} 页">
                            <Binding Path="CurrentPage" />
                            <Binding Path="TotalPages" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <!--下一页-->
                <RepeatButton
                    Command="{Binding NextPageCommand}">
                    <ui:SymbolIcon Symbol="NextFilled"
                                   FontSize="14" />
                </RepeatButton>
                <!--最后页-->
                <Button Margin="12,0,0,0"
                        Command="{Binding LastPageCommand}">
                    <ui:SymbolIcon Symbol="ChevronRight"
                                   FontSize="14" />
                </Button>
            </StackPanel>


        </Grid>

    </Grid>

</UserControl>
