<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             xmlns:vm="using:Dorisoy.PanClient.ViewModels"
             xmlns:local="using:Dorisoy.PanClient.Controls"
             xmlns:conv="using:Dorisoy.PanClient.Converters"
             xmlns:em="using:Dorisoy.PanClient.Common"
             mc:Ignorable="d"
             d:DesignWidth="1280"
             d:DesignHeight="720"
             x:Class="Dorisoy.PanClient.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             x:CompileBindings="False"
             Background="{DynamicResource BackgroundBrush}"
             RenderOptions.BitmapInterpolationMode="HighQuality">

    <UserControl.Resources>
        <ImageBrush x:Key="BackgroundBrush"
                    Source="avares://Dorisoy.PanClient/Assets/Images/login_bg.png"
                    AlignmentY="Bottom"
                    AlignmentX="Right"
                    Stretch="UniformToFill">
        </ImageBrush>
        <SolidColorBrush x:Key="TextBoxBackgroundBrush"
                         Color="#004883"
                         Opacity=".5" />
        <conv:EnumDescriptionConverter x:Key="EnumConverter" />
    </UserControl.Resources>

    <UserControl.Styles>

        <Style Selector="TextBox.input">
            <Setter Property="Foreground"
                    Value="#00aaeb" />
            <Setter Property="SelectionBrush"
                    Value="#00aaeb" />
            <Setter Property="BorderBrush"
                    Value="#004883" />
            <Setter Property="Padding"
                    Value="15 10" />
        </Style>

        <Style Selector="TextBox.input:focus">
            <Setter Property="Foreground"
                    Value="#FFFFFF" />
            <Style Selector="^ /template/ TextBlock#PART_Watermark">
                <Setter Property="Foreground"
                        Value="#FFFFFF" />
            </Style>
            <!--文本框-->
            <Style Selector="^ /template/ Border#PART_BorderElement">
                <Setter Property="Background"
                        Value="#004883FF"/>
                <Setter Property="BorderBrush"
                        Value="#00aaeb"/>
                <Setter Property="BorderThickness"
                        Value="1" />
            </Style>
        </Style>

        <Style Selector="TextBox.input:pointerover">
            <Setter Property="Foreground"
                    Value="#00aaeb" />

            <Style Selector="^ /template/ Border#PART_BorderElement">
                <Setter Property="BorderBrush"
                        Value="#00aaeb"/>
                <Setter Property="Background"
                        Value="#004883FF" />
            </Style>

            <Style Selector="^ /template/ TextBlock#PART_Watermark">
                <Setter Property="Foreground"
                        Value="#00aaeb" />
            </Style>
        </Style>

        <!--loginbutton-->
        <Style Selector="Button.loginbutton">
            <Style Selector="^ /template/ ui|FABorder#Root">
                <Setter Property="Transitions">
                    <Transitions>
                        <BrushTransition Duration="00:00:00.083"
                                         Property="Background" />
                    </Transitions>
                </Setter>
            </Style>
            <Style Selector="^:pointerover /template/ ui|FABorder#Root">
                <Setter Property="Background"
                        Value="#004883" />
            </Style>
            <Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Foreground"
                        Value="#FFFFFF" />
            </Style>
        </Style>

        <!--版本选择-->
        <Style Selector="ComboBox.cbs">
            <Setter Property="Padding"
                    Value="15 10" />
            <Setter Property="Foreground"
                    Value="#00aaeb" />
            <Setter Property="Background"
                    Value="#004883" />
            <Style Selector="^ /template/ Border#Background">
                <Setter Property="Background"
                        Value="#004883" />
                <Setter Property="BorderBrush"
                        Value="#004883" />
            </Style>
      
            <Style Selector="^:pointerover">
                <Style Selector="^ /template/ ContentPresenter#ContentPresenter">
                    <Setter Property="Foreground"
                            Value="#FFFFFF" />
                </Style>
                <Style Selector="^ /template/ TextBlock#PlaceholderTextBlock">
                    <Setter Property="Foreground"
                            Value="#FFFFFF" />
                </Style>
                <Style Selector="^ /template/ Border#Background">
                    <Setter Property="Background"
                            Value="#004883FF" />
                    <Setter Property="BorderBrush"
                            Value="#00aaeb" />
                </Style>
            </Style>
        </Style>

        <Style Selector="ComboBox.cbs ComboBoxItem">

            <Style Selector="^:pointerover">
                <Style Selector="^ /template/ Border#LayoutRoot">
                    <Setter Property="Background"
                            Value="#004883FF" />
                    <Setter Property="BorderBrush"
                            Value="#00aaeb" />
                </Style>
                <Style Selector="^ /template/ ContentPresenter#ContentPresenter">
                    <Setter Property="Foreground"
                            Value="#FFFFFF" />
                </Style>
            </Style>
        </Style>
    </UserControl.Styles>

    <DockPanel VerticalAlignment="Center"
               HorizontalAlignment="Center">

        <StackPanel Orientation="Vertical"
                    Spacing="15">

            <Image Source="avares://Dorisoy.PanClient/Assets/Images/logo.png"
                   Stretch="Fill"
                   Width="120"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,20"/>


            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="*,*,*,*">

                <TextBox Grid.Row="0"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Classes="input"
                         x:Name="UsernameTextBox"
                         Background="{DynamicResource TextBoxBackgroundBrush}"
                         Margin="0,0,0,10"
                         Watermark="账户"
                         VerticalContentAlignment="Center"
                         Height="40"
                         Text="{Binding Username}"></TextBox>
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Classes="input"
                         x:Name="PasswordTextBox"
                         Background="{DynamicResource TextBoxBackgroundBrush}"
                         Margin="0,0,0,10"
                         Watermark="密码"
                         VerticalContentAlignment="Center"
                         Height="40"
                         PasswordChar="*"
                         Text="{Binding Password}"></TextBox>

                <!--按钮栏-->
                <Button  x:Name="LoginButton"
                         Classes="loginbutton"
                         Grid.Row="2"
                         Grid.Column="0"
                         Width="170"
                         Height="40"
                         HorizontalAlignment="Left"
                         Margin="0,0,5,0"
                         Command="{Binding Login}">
                    <StackPanel>
                        <TextBlock 
                                   Text="{Binding LoginButtonLabel}"/>
                        <!--<ProgressBar
                            Height="3"
                            Maximum="100"
                            Foreground="#004883"
                            IsIndeterminate="True"
                            Margin="10,0,10,0"
                            IsVisible="{Binding IsBusy}"/>-->
                    </StackPanel>
                </Button>
                <Button x:Name="ExitButton"
                        Classes="loginbutton"
                        Grid.Row="2"
                        Grid.Column="1"
                        Content="退出"
                        Width="170"
                        Height="40"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding Exit}"/>


                <!--<Button x:Name="TosaButton"
                      Classes="loginbutton"
                      Grid.Row="3"
                      Grid.Column="1"
                      Content="Tosa"
                      Width="170"
                      Height="40"
                      Margin="5,0,0,0"
                      HorizontalAlignment="Right"
                       Click="TosaClick"/>-->

            </Grid>

            <StackPanel
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Spacing="5">
                <TextBlock Text="{Binding ErrorMessage}"
                           Classes="label error"
                           VerticalAlignment="Stretch"
                           TextAlignment="Center"
                           Foreground="#00aaeb"/>
                <TextBlock Classes="label"
                           Text="{Binding DevelopedBy}"
                           TextAlignment="Center"
                           Foreground="#00aaeb"/>
                <TextBlock Classes="label"
                           Text="{Binding Version}"
                           TextAlignment="Center"
                           Foreground="#00aaeb"/>

            </StackPanel>

        </StackPanel>
    </DockPanel>

</UserControl>
