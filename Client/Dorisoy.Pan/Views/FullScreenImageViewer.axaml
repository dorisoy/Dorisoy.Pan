<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Dorisoy.PanClient.Views.FullScreenImageViewer"
        xmlns:vm="using:Dorisoy.PanClient.ViewModels"
        x:DataType="vm:FullScreenImageViewerViewModel"
        x:CompileBindings="False"
        TransparencyLevelHint="None"
        CanResize="False"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaToDecorationsHint="True"
        Icon="/Assets/logo.ico"
        Foreground="#ffffff"
        Background="#000000"
        mc:Ignorable="d"
        Title="全屏" >


    <Grid RowDefinitions="*"
          ColumnDefinitions="*">

        <!--播放器-->
        <Image Source="{Binding PipWebcamViewSource}"  
               Stretch="{Binding SelectetStretch}"
               StretchDirection="{Binding SelectetStretchDirection}"/>

    </Grid>

</Window>
